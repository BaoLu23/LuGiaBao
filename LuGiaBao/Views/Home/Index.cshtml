@model IEnumerable<LuGiaBao.Models.Phim>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

@foreach (var item in Model)
{
    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
        <div class="panel panel-default">
            <div class="panel panel-heading">
                <strong>@item.tenphim</strong>
            </div>
            <div class="panel-body">
                <p><strong>Đạo diễn: </strong>@item.daodien</p>
                <p><img src="@item.hinh" alt="hinh thumnail" width="250px" /></p>
                <p><strong>Ngày chiếu: </strong>@item.ngaychieu</p>
              
            </div>
            <div class="panel-footer clearfix">
                <div class="pull-right">
                    <div class="TinhTrang">
                      @if(item.ngaychieu <= DateTime.Now)
                        {
                            <a class="btn btn-success">Đang chiếu</a>
                        }
                      else
                        {
                           <a class="btn btn-warning">Sắp chiếu</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}

</table>
